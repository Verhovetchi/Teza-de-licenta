     <link href="~/Content/Style.css" rel="stylesheet" type="text/css">
     <link rel="icon" href="~/Content/icon/barcaIcon.ico">
</head>

<body>
     <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-tod" id="nav">
