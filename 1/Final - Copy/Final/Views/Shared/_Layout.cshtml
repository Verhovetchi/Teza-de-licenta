          </div>
     </nav>

     @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@


     <div id="Content">
          <div id="Article">
               @RenderBody()
          </div>
          <div id="Clasament">
               <h2>
                    <center>
                         <img src="~/Content/Images/LaLiga.png" alt="La Liga Santander" title="La Liga Santander" id="Santander" />
