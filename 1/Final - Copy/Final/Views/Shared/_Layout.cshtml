@using Final.Models;
@using System.Data.Entity;
@using System.Web;

@{
     SoccerContext db = new SoccerContext();

     var teams = db.Teams.OrderByDescending(p=>p.Points);

     db.Players.Include(p => p.Team);
     db.Players.ToList();

     int i = 1;
}



<!DOCTYPE html>
<html>
<head>
